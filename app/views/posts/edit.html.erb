<%= render 'layouts/login_header' %>

<div class="d-flex m-auto" style="width:70%;">
  <h1>編集</h1>
</div>
<div class="col text-center m-auto" style="width:70%;">
  <%= form_for @post do |f| %>

      <div class="form-group">
          <%= f.label :content, '依頼内容' %>
          <%= f.text_area :content, class: 'form-control', rows:10 %>
          <small id=content-tip" class="form-text text-muted">
              依頼内容を入力してください。
          </small>
      </div>
      <%= f.submit '送信', class: 'btn btn-info btn-block' %>
      <small id="submit-tip" class="form-text text-muted">
          送信する前に内容を見直してください
      </small>
  <% end %>
</div>
