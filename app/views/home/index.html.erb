<h2 class="text-center mt-5" style="color:#177180">apprAise-factory</h2>
<div class="container-fluid d-flex justify-content-center jumbotron vertical-center bg-white">
  <div class="row w-100">
    <div class="col text-center ml-5 align-self-center">
      <br />
      <%= link_to  new_user_session_path, :class => 'btn p-3 pl-5 pr-5 mb-3 inline-block', :style =>"font-size:1.6rem; "  do %>
        <p>ログイン</p>
        <span class="border-top">Login</span>
      <% end %>
      <br />
      <%= link_to  new_user_registration_path, :class => 'btn p-3 pl-5 pr-5 mb-3 inline-block', :style =>"font-size:1.6rem;"  do %>
        <p>新規登録</p>
        <span class="border-top">Login</span>
      <% end %>
    </div>
    <div class="col text-center border-left mr-5">
      <h4 class="mb-3">お問合わせ</h4>
      <form style="width:70%" class="m-auto">
        <div class="form-group">
          <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="メールを入力">
          <small id="emailHelp" class="form-text text-muted">お客様のメールアドレスは保護されています</small>
        </div>
        <div class="form-group">
          <textarea class="form-control" name="content" rows="5" placeholder="お問合せ内容を入力"></textarea>
        </div>
        <button type="submit" class="btn w-100" style="background-color:#177180; color:white;">送信</button>
      </form>
    </div>
  </div>
</div>

<style>
  a:hover {
    color: white !important;
    background-color: #21a9bf;
  }
  span{
    display: block;
    margin-top:-20px;
    font-size:15px;

  }
</style>
