<%= render "devise/shared/error_messages", resource: resource %>
<body class="text-center container w-30">
  <% if user_signed_in? %>
    <h2 class="text-center mt-5">      <%= link_to "apprAise-factory", home_user_page_path, :style=>"text-decoration:none;color:#177180"  %></h2>
  <% else %>
    <h2 class="text-center mt-5">      <%= link_to "apprAise-factory", home_index_path, :style=>"text-decoration:none;color:#177180"  %></h2>
  <% end %>
  <div class=" justify-content-center jumbotron  bg-white">

    <h3>パスワードを忘れましたか？</h3>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

      <div class="field">
        <%= f.label :email, {class: 'sr-only'} %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'form-control pt-4 pb-4 mb-3', placeholder:"メールアドレス"  %>
      </div>

      <div class="actions">
        <%= f.submit "パスワード再発行", :class=>"btn w-100 mb-3", :style=>"background-color:#177180; color:white;" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</body>

<style>
  .w-30{
    width:30%;
  }
  ul{
    list-style: none;
    padding: 0;
    color:red;
  }
</style>
